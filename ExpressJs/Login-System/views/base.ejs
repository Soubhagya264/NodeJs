<%-include('header')-%>
<div class="text-center center-div " id="login">
    <div class="container w-25 border py-5 ">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Login into the exsisting user</span>
        </div>
        <form action="/route/login" method="POST" class="pb-3">
            <div class="form-group">
                <label for="email"></label>
                <input type="email" class="form-control mt-2" id="email" name="email" placeholder="Email">
                <small class="form-text text-muted text-left">Register Email</small>
            </div>
            <div class="form-group">
                <label for="password"></label>
                <input type="password" class="form-control mt-2" id="password" name="password" placeholder="Password" >
                <small class="form-text text-muted text-left">Register Password</small>
            </div>
            <button type="submit" class="btn btn-success rounded-pill mt-2">Login</button>
        </form>
    </div>
</div>
<%-include('footer')-%>