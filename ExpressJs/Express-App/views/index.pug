html(lang="en")
    title Express view App
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        div.text-center 
          h1.h1.py-4 Form 
        div.container.text-center.w-25   
                form(method="POST",action="/form_submit")
                    div.form-group
                        label(for="exampleFormControlInput1") Name
                        input.form-control(type="text",name="username",placeholder="name",class="form-control")
                    div.form-group
                        label(for="exampleFormControlInput1") Email
                        input.form-control(type="email",name="email",placeholder="email",class="form-control")
                    div.form-group
                        label(for="exampleFormControlTextarea1") Message
                        textarea.form-control(name="message",rows="3",class="form-control")
                    div.form-group
                        button.btn.btn-primary(type="submit") Submit
              


                    